@model LojaPc.Models.Empresa

@{
    ViewBag.Title = "Delete";
}

<div class="panel panel-default">
    <div class="panel-heading text-center">
        <label style="font-size: larger;">Detalhes</label>
    </div>
    <div class="panel-body">
        <div class="col-lg-12" style="margin-left: 34%;width: 530px;">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Cnpj)
                </dt>

                <dd>
                    <label>@Model.Cnpj</label>
                </dd>

            </dl>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2" style="margin-left: 37%;margin-right: 0px;padding-right: 0px;width: 292px;">
                    <input type="submit" value="Excluir" class="btn btn-danger" style="width: 136px;" />
                    @Html.ActionLink("Voltar", "Index", "Empresa", new { @class = "btn btn-info", @style = "width: 136px;" })
                </div>
            </div>
        }
    </div>
</div>


