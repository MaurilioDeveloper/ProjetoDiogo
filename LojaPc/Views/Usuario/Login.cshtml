@model LojaPc.Models.Usuario

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <style>
        .font-system {
            font-family: cursive;
        }

        .fa-desktop:before {
            margin-right: 25px !important;
            margin-left: 21px !important;
            font-size: 23px !important;
        }

        .fa-sign-in:before {
            margin-right: 25px !important;
            margin-left: 21px !important;
            font-size: 23px !important;
        }

        .inner-addon {
            position: relative;
        }

        .inner-addon .fa {
            position: absolute;
            padding: 10px;
            pointer-events: none;
        }

        .left-addon .glyphicon {
            left: 0px;
        }

        .right-addon .glyphicon {
            right: 0px;
        }

        .left-addon input {
            padding-left: 30px;
        }

        .right-addon input {
            padding-right: 30px;
        }
    </style>
</head>
<body class="font-system" style="padding-top:0px;">
    <div class="container" style="padding:0px;">
        <nav class="navbar navbar-default" style="margin-bottom: 0px;">
            <div class="navbar-header">
                <label class="navbar-brand" style="margin-left: 214%; width: 230px;"><i class="fa fa-map" aria-hidden="true"></i>FISHING</label>
            </div>
        </nav>
    </div>
    <div class="container" style="padding:0px;">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">

            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
            </ol>

            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    @*<img src="~/Pictures/Hogwarts600x375.png" alt="Image"> fazer uma imagem 1200x400*@
                    <img src="~/Imagens/peixes.jpg" alt="Image" style="width:100%;height:350px;" />
                    <div class="carousel-caption jumbotron" style="padding:0px;">
                        <h3 style="color: black;">Divulgação de seu comércio</h3>
                        <p style="color: black;">Faça ofertas de seu produto de forma rápida e fácil para usuários perto da sua localização!</p>
                    </div>
                </div>

                <div class="item">
                    @*<img src="~/Pictures/Herois600x375.png" alt="Image">*@
                    <img src="~/Imagens/peixes2.jpg" alt="Image" style="width:100%;height:350px;">
                    <div class="carousel-caption jumbotron" style="padding:0px;">
                        <h3 style="color:black;">Melhores locais para pesca</h3>
                        <p style="color: black;">Compartilhe os melhores locais de pesca e vizualize os melhores avaliados!</p>
                    </div>
                </div>
            </div>

            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            </a>
        </div>
    </div>
    <div class="container" style="padding:0px;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="panel panel-default">
                <div class="panel-heading">
                    <label style="font-size: large; margin-left: 44%;"><i class="fa fa-sign-in" aria-hidden="true"></i>Login</label>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal" style="margin-left: 27%;">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.UsuarioNome, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.UsuarioNome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UsuarioNome, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.UsuarioSenha, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.PasswordFor(model => model.UsuarioSenha, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.UsuarioSenha, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Permanecer Logado", null, new { @class = "control-label col-md-2", @style = "padding:0px" })
                            <div class="col-md-10">
                                @Html.CheckBox("permanecerLogado", false, new { @class = "control-label", @style="-webkit-transform: scale(1.3);margin-left: 3px;" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="inner-addon left-addon">
                                    <i class="fa fa-lock" style="color:#ffffff"></i>
                                    <input type="submit" value="Login" class="btn btn-primary" style="padding-left: 121px; padding-right: 121px;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <hr />
        <footer class="container text-center">
            <p>&copy; @DateTime.Now.Year - Loja PC</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
